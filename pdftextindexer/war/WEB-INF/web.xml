<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>pdftextindexer</display-name>
	<servlet>
		<servlet-name>SearchRemoteService</servlet-name>
		<servlet-class>org.lucho.server.SearchRemoteServiceImpl</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UploadService</servlet-name>
		<servlet-class>org.lucho.server.upload.UploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SearchRemoteService</servlet-name>
		<url-pattern>
            /searchRemoteService
        </url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UploadService</servlet-name>
		<url-pattern>
            /uploadHandler
        </url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>